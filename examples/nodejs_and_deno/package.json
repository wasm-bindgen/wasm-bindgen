{
	"type": "module",
	"scripts": {
		"build:nodejs": "cargo wasm-bindgen build --target nodejs --out-dir ../dist/nodejs_and_deno/nodejs",
		"build:deno": "cargo wasm-bindgen build --target deno --out-dir ../dist/nodejs_and_deno/deno",
		"build:experimental-nodejs-module": "cargo wasm-bindgen build --target experimental-nodejs-module --out-dir ../dist/nodejs_and_deno/experimental-nodejs-module",
		"build:esm-integration": "cargo wasm-bindgen build --out-dir ../dist/nodejs_and_deno/esm-integration",
		"build": "pnpm /^build:/",
		"test:nodejs": "node test.js nodejs",
		"test:nodejs:esm-integration": "node test.js esm-integration",
		"test:deno": "deno run --allow-read test.js deno",
		"test:deno:esm-integration": "deno run --allow-read test.js esm-integration",
		"test:experimental-nodejs-module": "node test.js experimental-nodejs-module",
		"test": "pnpm /^test:/"
	}
}
